<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgraound"
    tools:context=".Fragments.FragmentBildirim">

    <RelativeLayout
        android:id="@+id/relativbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark">



        <TextView
            android:id="@+id/bildirimlisteadi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Liste"
            android:textColor="@color/colorBackgraound"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bildirimback"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/ic_arrow" />
    </RelativeLayout>



    <TextView
        android:id="@+id/bildirimvisibletext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawableTop="@drawable/ic_voice_over_off"
        android:text="Bu liste için tanımlı ortak arkadaş bulunamadı."
        android:textColor="@color/colorTabText"
        android:textSize="16dp"
        android:textStyle="normal"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/bildirimtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativbar"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="8dp"
        android:drawableTop="@drawable/ic_largesend"
        android:gravity="center"
        android:text="Bildirim Gönder"
        android:textColor="@color/colorTabText"
        android:textSize="18dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/ipucutext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bildirimtxt"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="İpucu: Bildirim göndermek istediğiniz kullanıcının üzerine dokunun. Sadece bir defa bildirim gönderebilirsiniz."
        android:textSize="14dp" />


    <ListView
        android:id="@+id/bildirimgonderlistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ipucutext"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp">

    </ListView>


</RelativeLayout>