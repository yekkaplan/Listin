<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_group_add"
            android:gravity="center"
            android:text="Eklemek istediğiniz kullanıcı:"
            android:textSize="16dp"
            android:fontFamily="sans-serif"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/cevrimiciurunmenualertedittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:hint="örn:kullanıcı@example.com" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cevrimciciuruniptalbuttonyenidenadlandır"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@+id/cevrimiciurunmenualertbutton"
                android:text="İptal"
                android:textColor="@color/colorTabText"
                android:textSize="16dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/cevrimiciurunmenualertbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:text="Ekle"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="normal" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
