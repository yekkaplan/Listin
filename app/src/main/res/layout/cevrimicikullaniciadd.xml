<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorDeepCamaru"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_group_add"
            android:gravity="center"
            android:text="Eklemek istediğiniz kullanıcı e-maili:"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/muli_regular"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/cevrimiciurunmenualertedittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/muli"
            android:textColorHint="@android:color/darker_gray"
            android:hint="örn:kullanıcı@example.com" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cevrimciciuruniptalbuttonyenidenadlandır"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@+id/cevrimiciurunmenualertbutton"
                android:text="İptal"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:fontFamily="@font/muli_regular"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cevrimiciurunmenualertbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:text="Ekle"
                android:fontFamily="@font/muli_regular"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
