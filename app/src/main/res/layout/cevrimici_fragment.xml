<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/cevrimicirelativbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">


        <ImageView
            android:id="@+id/cevrimicipopupTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_vertyirmi" />

        <ImageView
            android:id="@+id/cevrimicipaylasbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/cevrimicipopupTextview"
            android:clickable="true"
            android:src="@drawable/ic_shareyirmi" />


        <TextView
            android:id="@+id/cevrimicilistebasligi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:text="Listin &amp; Çevrimiçi Listeler"
            android:textColor="@color/colorBackgraound"
            android:textSize="16dp"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgraound"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/cevrimicitumlistelerRecylerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/tumlistelervisibletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableTop="@drawable/ic_sync_disabled"
            android:text="Liste bulunamadı. + tuşundan oluşturabilirsiniz."
            android:textColor="@color/colorTabText"
            android:textSize="14dp"
            android:textStyle="normal"
            android:visibility="invisible" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/cevrimicifab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/fab_add"
            fab:fab_colorNormal="@color/secondaryPink"
            fab:fab_colorPressed="@color/colorAccent"
            fab:fab_colorRipple="@color/colorPrimary" />


    </RelativeLayout>
</LinearLayout>